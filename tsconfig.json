{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/js/app.ts",
    "src/**/js/mgt.ts",
    "src/**/js/data/*.ts"
, "src/js/mgt/index.ts"  ]
}


